<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BasicInformationActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/pageTitleInitPage"
        android:text="Required Infomation"
        android:textSize="20sp"
        android:textColor="@color/steel_blue"
        android:fontFamily="@font/poppins_semibold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pageTitleInitPage"
        android:layout_above="@id/nextButton">
        <RelativeLayout
            android:alpha="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/section0">
            <TextView
                android:id="@+id/sectionTitle0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Personal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sectionTitle0">

                <RelativeLayout
                    android:id="@+id/profileChangePlace"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:layout_centerHorizontal="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="175dp"
                        app:cardCornerRadius="87.5dp"
                        android:id="@+id/editProfileButton">
                        <ImageView
                            android:contentDescription="Profile Picture of User"
                            android:layout_width="175dp"
                            android:clipToOutline="true"
                            android:layout_height="175dp"
                            android:id="@+id/profile_img_holder"
                            android:src="@drawable/profile_img_holder" />
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:translationZ="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_img_icon"
                        android:paddingVertical="7dp"
                        android:src="@drawable/baseline_edit_24" />
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileChangePlace"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="100dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPhoneNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textInInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:textSize="18sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Phone Number"
                            android:textColor="@color/steel_blue" />
                    </RelativeLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/section1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Team"
                android:id="@+id/sectionTitle"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sectionTitle">
                <LinearLayout
                    android:id="@+id/rowOneCards"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardElevation="20dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/saffron"
                        android:id="@+id/teamRainbowCard"
                        android:foreground="@drawable/not_selected_border_style">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Team\nRainbow"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="20dp"
                        android:layout_margin="20dp"
                        android:id="@+id/teamEvolutionCard"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/sky_blue"
                        android:layout_toEndOf="@id/teamRainbowCard"
                        android:foreground="@drawable/not_selected_border_style"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team\nEvolution"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="12dp"
                    android:layout_below="@id/rowOneCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="35dp"
                        android:id="@+id/teamAvatarCard"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/gold_yellow"

                        android:foreground="@drawable/not_selected_border_style"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team\nAvatar"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="35dp"
                        android:id="@+id/teamMatrixCard"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/material_dynamic_neutral50"
                        android:foreground="@drawable/not_selected_border_style">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team\nMatrix"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/section2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Position"
                android:id="@+id/sectionTitle2"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sectionTitle2">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:id="@+id/rowOneCardsPosition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/managerCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:contentPaddingLeft="30dp"
                            app:contentPaddingRight="30dp"
                            app:contentPaddingTop="60dp"
                            app:contentPaddingBottom="60dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            app:cardBackgroundColor="@color/gold_yellow"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Manager"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@id/rowOneCardsPosition"
                        android:id="@+id/rowTwoCardsPosition"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/teamLeadCard"
                            android:layout_weight="1"
                            app:contentPaddingTop="50dp"
                            app:contentPaddingBottom="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            app:cardBackgroundColor="@color/saffron"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="20dp"
                            android:layout_below="@id/rowOneCardsPosition">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Team\nLead"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/scrumMasterCard"
                            android:layout_weight="1"
                            app:contentPaddingTop="50dp"
                            app:contentPaddingBottom="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_toEndOf="@id/teamLeadCard"
                            app:cardBackgroundColor="@color/sky_blue"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="20dp"
                            android:layout_below="@id/rowOneCardsPosition">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Scrum\nMaster"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@id/rowTwoCardsPosition"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardElevation="20dp"
                            app:contentPaddingTop="65dp"
                            app:contentPaddingBottom="65dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="35dp"
                            android:id="@+id/devCard"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/cement"
                            android:layout_below="@id/rowTwoCardsPosition"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Developer"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:contentPaddingTop="65dp"
                            app:contentPaddingBottom="65dp"
                            app:cardElevation="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="35dp"
                            android:id="@+id/internCard"
                            app:cardCornerRadius="20dp"
                            android:layout_toEndOf="@id/devCard"
                            app:cardBackgroundColor="@color/steel_blue"
                            android:layout_below="@id/rowTwoCardsPosition">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intern"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:layout_gravity="center" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/section3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configure Your Leave Days"
                android:id="@+id/sectionTitle3"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        >
        <ImageView
            android:id="@+id/sectionDot0"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_selected_indicator"
            android:layout_marginHorizontal="5dp"
            />
        <ImageView
            android:id="@+id/sectionDot1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_indicator"
            android:layout_marginHorizontal="5dp"
            />
        <ImageView
            android:id="@+id/sectionDot2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_indicator"
            android:layout_marginHorizontal="5dp"
            />
        <ImageView
            android:id="@+id/sectionDot3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_indicator"
            android:layout_marginHorizontal="5dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevButton"
        android:text="Previous"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/steel_blue"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:text="Next"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/steel_blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        />
</RelativeLayout>